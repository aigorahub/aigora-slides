{
  "name": "aigora-slides",
  "version": "1.0.0",
  "description": "A sophisticated reveal.js slide deck template implementing the Aigora design system with Tailwind CSS",
  "main": ".eleventy.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "npx postcss src/css/style.css -o _site/assets/css/style.css && npx postcss src/css/reveal-aigora.css -o _site/assets/css/reveal-aigora.css",
    "build:11ty": "eleventy",
    "build": "npm run build:css && npm run build:11ty",
    "start": "npm run build && eleventy --serve",
    "serve": "eleventy --serve"
  },
  "keywords": [
    "eleventy",
    "tailwindcss",
    "reveal.js",
    "slides",
    "presentation",
    "template",
    "starter",
    "aigora",
    "design-system"
  ],
  "author": "Aigora",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aigora/aigora-slides.git"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.43",
    "postcss": "^8.5.4",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.2.0",
    "reveal.js": "^5.2.1"
  }
}