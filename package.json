{
  "name": "aigora-eleventy-template",
  "version": "1.0.0",
  "description": "A sophisticated Eleventy starter template implementing the Aigora design system with Tailwind CSS and DaisyUI",
  "main": ".eleventy.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "postcss src/css/style.css -o _site/assets/css/style.css",
    "build:11ty": "eleventy",
    "build": "npm run build:css && npm run build:11ty",
    "start": "npm run build && eleventy --serve"
  },
  "keywords": [
    "eleventy",
    "tailwindcss",
    "daisyui",
    "template",
    "starter",
    "aigora",
    "design-system"
  ],
  "author": "Aigora",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aigora/aigora-eleventy-site.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.43",
    "postcss": "^8.5.4",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  }
}